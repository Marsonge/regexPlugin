<project
  default="ideaZip"
  xmlns:j="jelly:core"
  xmlns:u="jelly:util"
  xmlns:ant="jelly:ant">

  <goal name="ideaZip" prereqs="java:compile, jar:jar">
    <ant:zip zipfile="${maven.build.dir}/${maven.final.name}.zip">
      <ant:zipfileset dir="src/META-INF" prefix="${maven.final.name}/META-INF" />
      <ant:zipfileset dir="src/help" prefix="${maven.final.name}/help" />
      <ant:zipfileset dir="target" prefix="${maven.final.name}/lib" includes="*.jar" />
    </ant:zip>    
  </goal>

</project>