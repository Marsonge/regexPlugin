<?xml version="1.0"?>
<project>
  <!--
  <extend>../ideaPluginProject.xml</extend>
  -->

  <name>regexPlugin</name>
  <id>regexPlugin</id>

  <currentVersion>0.5.0</currentVersion>
  <organization>flopcode</organization>
  <developers>
    <developer>
      <name>Christian Koestlin</name>
      <id>cK</id>
      <email>gizmoATflopcodeDOTcom</email>
    </developer>
    <developer>
      <name>Guy Gascoigne Piggford</name>
      <id>gP</id>
      <email>guy@wyrdrune.com</email>
    </developer>
  </developers>

  <package>regexPlugin</package>

  <dependencies>
    <dependency>
      <groupId>intellij</groupId>
      <artifactId>idea</artifactId>
      <version>2072</version>
    </dependency>

    <dependency>
      <groupId>jdom</groupId>
      <artifactId>jdom</artifactId>
      <version>b9</version>
      <properties>
        <jnlp.jar>true</jnlp.jar>
      </properties>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src</sourceDirectory>

    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.html</include>
        </includes>
        <includes>
          <include>**/*.png</include>
        </includes>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>

</project>
